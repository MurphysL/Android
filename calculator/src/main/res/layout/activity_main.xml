<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    //输入
    <EditText
        android:id="@+id/et_input"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/colorBlack"
        android:textSize="55dp"
        android:gravity="right|bottom"
        android:background="@drawable/shape"
        android:editable="false"
        />

    //输出
    <EditText
        android:id="@+id/et_input2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/colorBlack"
        android:textSize="55dp"
        android:gravity="right|bottom"
        android:background="@drawable/shape"
        android:editable="false"
        />

    //键盘
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3.5"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        //1
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <Button
                    android:id="@+id/bt_add"
                    android:text="+"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_decrease"
                    android:text="-"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>

                <Button
                    android:id="@+id/bt_mult"
                    android:text="*"
                    android:textSize="40dp"
                    android:gravity="center"
                    android:background="@drawable/gray_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_division"
                    android:text="/"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"/>
            </LinearLayout>

        //2
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/bt_7"
                    android:text="7"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_8"
                    android:text="8"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_9"
                    android:text="9"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_C"
                    android:text="C"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />
            </LinearLayout>

        //3
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/bt_4"
                    android:text="4"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_5"
                    android:text="5"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_6"
                    android:text="6"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Button
                    android:id="@+id/bt_DEL"
                    android:text="DEL"
                    android:textSize="35dp"
                    android:gravity="center"
                    android:background="@drawable/gray2_selector"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />
            </LinearLayout>

        //4
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    //第一排
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <Button
                            android:id="@+id/bt_1"
                            android:text="1"
                            android:textSize="35dp"
                            android:gravity="center"
                            android:background="@drawable/gray2_selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/bt_2"
                            android:text="2"
                            android:textSize="35dp"
                            android:gravity="center"
                            android:background="@drawable/gray2_selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/bt_3"
                            android:text="3"
                            android:textSize="35dp"
                            android:gravity="center"
                            android:background="@drawable/gray2_selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    //第二排
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <Button
                            android:id="@+id/bt_0"
                            android:text="0"
                            android:textSize="35dp"
                            android:gravity="center"
                            android:background="@drawable/gray2_selector"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/bt_point"
                            android:text="."
                            android:textSize="35dp"
                            android:gravity="center"
                            android:background="@drawable/gray2_selector"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>


                //等于
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/bt_eq"
                        android:text="="
                        android:textSize="35dp"
                        android:gravity="center"
                        android:background="@drawable/blue_selector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>

